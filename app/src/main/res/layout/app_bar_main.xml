<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:elevation="0dp"
            >

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
            >
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="45dp"
                    android:id="@+id/toolbarMenu"
                    android:tint="@android:color/holo_purple"
                    android:layout_centerVertical="true"
                    android:layout_height="45dp"
                    android:src="@drawable/menu"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginRight="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/toolbarMenu"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/toolbrtext"
                    android:textColor="@android:color/holo_purple"
                    android:text="Political Blog"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@android:color/holo_purple"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/toolbarSearch"
                    android:src="@drawable/noticon"
                    />
                <ImageView
                    android:id="@+id/toolbarSearch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="25dp"
                    android:tint="@android:color/holo_purple"
                    android:src="@drawable/searchicon"
                    android:layout_height="25dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            app:tabTextColor="@android:color/holo_purple"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_marginTop="112dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include layout="@layout/content_main"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="30dp"
            app:srcCompat="@android:drawable/ic_dialog_email"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>